{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "iden",
	"version": "0.1.1",
	"private": true,
	"type": "module",
	"main": "src/index.tsx",
	"module": "src/index.tsx",
	"scripts": {
		"dev": "bun --hot src/index.tsx",
		"start": "NODE_ENV=production bun src/index.tsx",
		"build": "bun run build.ts",
		"generate-routes": "tsr generate",
		"watch-routes": "tsr watch",
		"lint": "tsc --noEmit -p tsconfig.json",
		"format": "bun run lint && biome format --write && biome lint --write"
	},
	"dependencies": {
		"@hookform/resolvers": "5.0.1",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-select": "^2.1.6",
		"@radix-ui/react-slot": "^1.1.2",
		"@tanstack/react-router": "^1.120.12",
		"@tanstack/react-router-devtools": "^1.120.12",
		"bun-plugin-tailwind": "0.0.15",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dexie": "^4.0.11",
		"dexie-react-hooks": "^1.1.7",
		"lucide-react": "0.513.0",
		"react": "^19",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.54.2",
		"tailwind-merge": "^3.0.1",
		"tailwindcss": "^4.0.6",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@happy-dom/global-registrator": "^17.5.6",
		"@tanstack/router-cli": "^1.120.11",
		"@tanstack/router-plugin": "^1.120.11",
		"@testing-library/react": "^16.3.0",
		"@types/bun": "latest",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"concurrently": "^9.1.2"
	}
}
